<h1 class="text-center mt-4">Alpha Bloggers</h1>

<div class="flickr_pagination">
  <%= will_paginate @users, :container => false %>
</div>

<div class="container">
  <% @users.each do |user| %>
  <div class="row justify-content-md-center">
    <div class="col-md-4">
      <div class="card p-3 mb-2">
        <div class="d-flex justify-content-between">
          <div class="d-flex flex-row align-items-center">
            <div class="icon mr-3"> 
              <div class = "bx bxl-dribbble">
                <%= link_to gravatar_for(user, size: 50), user %>
              </div>
            </div>
            <div class="ms-2 c-details">
              <h6 class="mb-0"><%= link_to user.username, user %></h6> <span>Joined <%= time_ago_in_words(user.created_at) %> days ago</span>
            </div>
            </div>
            <div class="badge"> <span>Pro</span> </div>
          </div>
            <div class="mt-5">
              <%= link_to "View profile", user, class: "btn btn-outline-success mr-3" %>
              <% if logged_in? && current_user.id == user.id%>
              <%= link_to "Edit profile", edit_user_path(user), class: "btn btn-outline-info" %>
              <% end %>
              <%# <h3 class="heading">Junior Product<br>Designer-Singapore</h3> %>
              <div class="mt-5">
                <div class="mt-3"> <h5 class="d-flex align-items-center mb-0"><%= pluralize(user.articles.count, "article") %></h2></span> </div>
              </div>
          </div>
        </div>
    </div>
  </div>
  <% end %>
</div>